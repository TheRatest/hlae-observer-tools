<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:HlaeObsTools.Views.Docks"
        x:Class="HlaeObsTools.Views.Docks.CampathGroupViewWindow"
        x:CompileBindings="False"
        Width="400" Height="500"
        Title="Group Campaths">
  <Grid RowDefinitions="Auto,*" Margin="12">
    <StackPanel Orientation="Horizontal" Spacing="8">
      <TextBlock Text="{Binding GroupName}" FontWeight="SemiBold" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding ModeText}" Foreground="#9AA5B1" VerticalAlignment="Center"/>
    </StackPanel>
    <ListBox Grid.Row="1"
             ItemsSource="{Binding CampathItems}"
             SelectionMode="Single"
             Background="Transparent"
             BorderThickness="1">
      <ListBox.ItemTemplate>
        <DataTemplate>
          <Border Background="#222" Padding="8" Margin="4">
            <StackPanel Orientation="Horizontal" Spacing="8">
              <TextBlock Text="{Binding Name}" Foreground="#E0E0E0"/>
              <Button Content="Up" Command="{Binding DataContext.MoveCampathUpCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
              <Button Content="Down" Command="{Binding DataContext.MoveCampathDownCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
              <Button Content="Remove" Command="{Binding DataContext.RemoveCampathFromGroupCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding}" />
            </StackPanel>
          </Border>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
  </Grid>
</Window>
