<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:HlaeObsTools.ViewModels.Hud"
        xmlns:views="using:HlaeObsTools.Views"
        xmlns:ac="clr-namespace:Avalonia.Controls;assembly=Avalonia.Controls"
        x:Class="HlaeObsTools.Views.HudOverlayWindow"
        x:DataType="vm:HudOverlayViewModel"
        Title="HUD Overlay"
        TransparencyLevelHint="Transparent"
        Background="Transparent"
        SystemDecorations="None"
        CanResize="False"
        ShowInTaskbar="False"
        ExtendClientAreaToDecorationsHint="False"
        Width="800"
        Height="600">

    <!-- HUD overlay with freecam indicator and speed scale -->
    <views:HudOverlayContent x:Name="HudContent"
                             IsVisible="{Binding ShowNativeHud}" />
</Window>
